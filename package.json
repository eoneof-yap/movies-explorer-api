{
  "name": "movies-explorer-api",
  "description": "Дипломный проект студента Яндекс Практикума. Бэкенд для одостраничного приложения по поиску фильмов, с возможностью регистрации и авторизации пользователей и хранения списка понравивишихся им фильмов.",
  "author": "Николай Иванов",
  "version": "1.0.0",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "set NODE_ENV=development&& set PORT=3001&& nodemon ./src/app.js",
    "debug": "set NODE_ENV=development&& set PORT=3001&& nodemon --inspect ./src/app.js",
    "lint": "npx eslint ./src",
    "lint:fix": "npx eslint ./src --fix"
  },
  "homepage": "https://github.com/eoneof-yap/movies-explorer-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eoneof-yap/movies-explorer-api.git"
  },
  "keywords": [
    "nodejs",
    "mongodb",
    "express"
  ],
  "dependencies": {
    "express": "^4.18.1",
    "mongoose": "^6.6.4",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ]
  }
}
